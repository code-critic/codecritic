<div class="header-image card-image mb-1 rounded-top" style="background-size: cover; background-image: url('/static/imgs/intro.jpeg');">
  <div class="header-grad text-white align-items-center p-4 rounded-top rgba-blue-strong">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h2 class="card-title m-0 text-white">
          {% if back %}
            <a href="{{ back.url }}" class="back-btn" data-toggle="tooltip" title="Go back to {{ back.text }}">
              <i class="fas fa-chevron-left"></i>
            </a>
          {% endif %}

          {{ title }}
          {% if subtitle %}
            &middot;{{ subtitle }}
          {% endif %}
        </h2>
      </div>

      <button class="btn btn-primary rounded dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        {% if user.is_admin() %}
          <i class="fas fa-user-shield" title="Elevated privileged (role {{ user.role }})"></i>
        {% endif %}
        {{ user.name }}
        {# <small>
      <small>({{ user.affi }})</small>
    </small> #}
      </button>
      <div class="dropdown-menu">
        {% if user.role %}
          <div class="mx-2 my-1">
            <strong>{{ user.role }}</strong>
          </div>
        {% endif %}

        {% if user.affi %}
          <div class="mx-2 my-1 text-muted smaller">
            {% for affi in user.affi_pairs %}
              {{ affi }}<br/>
            {% endfor %}
          </div>
        {% endif %}

        {% if user.is_admin() %}
          <div class="mx-2 my-1 text-muted smaller">
            <strong>{{ Env.HEAD }}</strong>
          </div>
          <a class="dropdown-item" href="{{ url_for('print_log') }}" target="_blank">
            <i class="btn-fa-icon fas fa-eye"></i>
            <strong>View</strong> log
          </a>
          <a class="dropdown-item" href="{{ url_for('clear_log') }}" target="_blank">
            <i class="btn-fa-icon fas fa-times"></i>
            <strong>CLEAR</strong> log
          </a>
          <a class="dropdown-item" href="{{ url_for('admin_switch_role', role='student') }}">
            <i class="btn-fa-icon fas fa-user-tag"></i>
            Switch to role <strong>student</strong>
          </a>
          <a class="dropdown-item" href="{{ url_for('autoindex') }}" target="_blank">
            <i class="btn-fa-icon fas fa-folder-open"></i>
            Browse files
          </a>
        {% endif %}

        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="{{ url_for('logout') }}">
          <i class="fas fa-power-off"></i>
          Logout
        </a>
      </div>
    </div>
  </div>
</div>
