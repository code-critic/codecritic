<div class="execution-test {{ status }}" id="e-{{ uuid }}">
  <div class="d-flex mb-2">
    {% if status == 'running' %}
      <span class="test-icon">
        <div class="spinner loader status-badge">
          <div class="rect1"></div>
          <div class="rect2"></div>
          <div class="rect3"></div>
          <div class="rect4"></div>
          <div class="rect5"></div>
        </div>
      </span>
    {% endif %}

    {% if inArray(status, ['ok', 'answer-correct']) %}
      <span class="test-icon">
        <span class="status-badge">
          <i class="fas fa-check"></i>
        </span>
      </span>
    {% endif %}

    {% if inArray(status, ['answer-correct-timeout']) %}
      <span class="test-icon">
        <span class="status-badge">
          <i class="fas fa-exclamation"></i>
          {# <i class="fas fa-not-equal"></i> #}
        </span>
      </span>
    {% endif %}

    {% if inArray(status, ['error', 'answer-wrong', 'answer-wrong-timeout', 'error-while-running']) %}
      <span class="test-icon">
        <span class="status-badge">
          <i class="fas fa-times"></i>
        </span>
      </span>
    {% endif %}

    {% if inArray(status, ['skipped', 'ignore']) %}
      <span class="test-icon">
        <div class="status-badge">
          <i class="fas fa-question"></i>
        </div>
      </span>
    {% endif %}

    {% if status == 'global-timeout' %}
      <span class="test-icon">
        <div class="status-badge">
          <i class="fas fa-question"></i>
        </div>
      </span>
    {% endif %}

    {% if inArray(status, ['waiting', 'in-queue']) %}
      <span class="test-icon">
        <div class="status-badge">
          <i class="fas fa-clock"></i>
        </div>
      </span>
    {% endif %}

    <a class="btn-block-anim flex-fill" data-toggle="collapse" data-target="#eo-{{ uuid }}">
      {% if duration %}
        <span class="duration">
          [{{ duration | toFixed(2) }}&nbsp;sec]</span>
      {% endif %}

      {{ id }}

      {% if message %}
        <span class="message">:&nbsp;{{ message }}</span>
      {% endif %}
    </a>
  </div>
  
  <div class="result-details stdout-stderr collapse" id="eo-{{ uuid }}">
    
    {% if attachments | length %}
      <div class="d-flex mb-2 attachments">
        <div class="pr-2 empty-padding">
        </div>
        <div class="attachment-btns">
            {% for att in attachments %}<a class="attachment-btn px-1 py-1 m-0" href="/file/{{ att.url }}/{{ att.name }}" target="_blank">{{ att.name }}</a>{% endfor %}
        </div>
      </div>
    {% endif %}
    
    {% if message_details | length %}
      {% for line in message_details %}
        <p>{{ line }}</p>
      {% endfor %}
    {% endif %}

    {% if console | length %}
      <div class="result-text console">
        <span class="title">Console:</span>
        <ul class="std-list">
          {% for line in console %}
            <li>{{ line }}</li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}

    {% if stderr | length %}
      <div class="result-text stderr">
        <span class="title">Stderr:</span>
        <ol class="std-list">
          {% for line in stderr %}
            <li>{{ line }}</li>
          {% endfor %}
        </ol>
      </div>
    {% endif %}

    {% if stdout | length %}
      <div class="result-text stdout">
        <span class="title">Output:</span>
        <ol class="std-list">
          {% for line in stdout %}
            <li>{{ line }}</li>
          {% endfor %}
        </ol>
      </div>
    {% endif %}
  </div>
</div>
